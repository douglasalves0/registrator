{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "src",
		"allowJs": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,        /*    Needed to typeorm works properly   */
		"experimentalDecorators": true        /*    Needed to typeorm works properly    */
	}
}